{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "types": ["@types/jest"],
    "paths": {
      "@/noroff-api-utils/*": ["src/noroff-api-utils/*"],
      "@/utils/*": ["src/utils/*"],
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules"]
}
